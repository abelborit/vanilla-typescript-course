{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "sourceMap": true, // Create source map files for emitted JavaScript files
    "removeComments": true, // Disable emitting comments (solo en los .js pero NO en los .ts ni en los .js.map)

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noImplicitAny": true, // por defecto es true si se tiene "strict": true
    "strictNullChecks": true, // por defecto es true si se tiene "strict": true. Si es true entonces booleans, null o undefined son tipos distintos.
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"]
  // "exclude": [] // los archivos que estan en esa carpeta no se compilaran
}
